{
	"development": {
		"bable": true,
		"concat": true,
		"minify": true,
		"postcss": true,
		"sourcemaps": true,
		"webpack": true,
		"source": {
			"images": "./src/images",
			"sass": "./src/css/sass",
			"scripts": "./src/js",
        	"styles": "./src/css"
		},
		"dest": {
			"dist": "./dist",
			"images": "./src/images",
			"sass": "./src/css/sass",
			"scripts": "./src/js",
			"styles": "./src/css"
		},
		"files": {
			"css": "style.css",
			"cssmin": "style.min.css",
			"html": [ "./*.html", "./**/*.html" ],
			"images": "/**/*",
			"js": "script.js",
			"jsmin": "script.min.js",
			"jsSrc": "/scripts/index.js",
			"php": [ "./*.php", "./**/*.php" ],
			"sass": "/**/*.scss"
		},
		"excludes": [
			"./**/*",
			"!src/css/sass",
			"!src/css/sass/**",
			"!src/js/src",
			"!src/js/src/**",
			"!bin",
			"!bin/**",
			"!dist",
			"!dist/**",
			"!git",
			"!git/**",
			"!node_modules",
			"!node_modules/**",
			"!tasks",
			"!tasks/**",
			"!tests",
			"!tests/**",
			"!.bablerc",
			"!.editorconfig",
			"!.eslintrc.js",
			"!.gitignore",
			"!.sas-lint.yml",
			"!.travis.yml",
			"!gulpfile.babel.js",
			"!package-lock.json",
			"!package.json",
			"!phpcs.xml",
			"!phpmd.xml",
			"!phpunit.xml",
			"!yarn.lock"
		]
	},
	"production": {
		"bable": true,
		"concat": true,
		"minify": true,
		"postcss": true,
		"sourcemaps": true,
		"webpack": true,
		"source": {
			"images": "./src/images",
			"sass": "./src/css/sass",
			"scripts": "./src/js",
        	"styles": "./src/css"
		},
		"dest": {
			"dist": "./dist",
			"images": "./src/images",
			"sass": "./src/css/sass",
			"scripts": "./src/js",
			"styles": "./src/css"
		},
		"files": {
			"css": "style.css",
			"cssmin": "style.min.css",
			"html": [ "./*.html", "./**/*.html" ],
			"images": "/**/*",
			"js": "script.js",
			"jsmin": "script.min.js",
			"jsSrc": "/src/*.js",
			"php": [ "./*.php", "./**/*.php" ],
			"sass": "/**/*.scss"
		},
		"excludes": [
			"./**/*",
			"!src/css/sass",
			"!src/css/sass/**",
			"!src/js/src",
			"!src/js/src/**",
			"!bin",
			"!bin/**",
			"!dist",
			"!dist/**",
			"!git",
			"!git/**",
			"!node_modules",
			"!node_modules/**",
			"!tasks",
			"!tasks/**",
			"!tests",
			"!tests/**",
			"!.bablerc",
			"!.editorconfig",
			"!.eslintrc.js",
			"!.gitignore",
			"!.sas-lint.yml",
			"!.travis.yml",
			"!gulpfile.babel.js",
			"!package-lock.json",
			"!package.json",
			"!phpcs.xml",
			"!phpmd.xml",
			"!phpunit.xml",
			"!yarn.lock"
		]
	}
}